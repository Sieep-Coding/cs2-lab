---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import { Image } from "astro:assets";
import { authors } from "@/data/authors";
import Pagetitle from "@/components/pagetitle.astro";
import Link from "@/components/ui/link.astro";
---

<Layout title="About">
  <Container>
    <Pagetitle>
      <Fragment slot="title">About</Fragment>
      <Fragment slot="desc">Independent Counter-Strike analysis platform</Fragment>
    </Pagetitle>

    <div class="grid md:grid-cols-1 gap-10 mx-auto max-w-4xl mt-12">
      {
        authors.slice(0, 3).map((item) => (
          <div class="group">
            <div class="flex items-center justify-center w-40 h-40 mx-auto overflow-hidden rounded-full bg-gray-100 dark:bg-gray-800">
              <Image
                src={item.image}
                format="avif"
                width={580}
                height={580}
                alt={item.name}
                class="w-[150px] h-[150px]"
              />
            </div>

            <div class="mt-4 text-center">
              <h3 class="text-sm text-gray-500 dark:text-gray-300">
                {item.name}
              </h3>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mx-auto max-w-xl text-center mt-14 space-y-6">
      <p class="text-lg leading-relaxed text-gray-600 dark:text-gray-400">
        Founded by a Counter-Strike veteran with over 15 years of competitive
        experience, CS2 Lab is an independent platform focused on high-signal
        analysis of the professional scene, map meta, and gameplay trends.
      </p>

      <p class="text-base leading-relaxed text-gray-600 dark:text-gray-400">
        We work with partners who value informed audiences, long-form analysis,
        and content built for competitive Counter-Strike fans.
      </p>
      <p class="text-base leading-relaxed text-gray-600 dark:text-gray-400">
        Sponsorships, media collaborations, and branded content inquiries are
        welcome.
      </p>

      <div class="pt-4">
        <Link href="/contact" style="primary">
          Partnerships & Media Inquiries
        </Link>
      </div>
    </div>
  </Container>
</Layout>
