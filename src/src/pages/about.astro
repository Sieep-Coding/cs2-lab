---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import { Image } from "astro:assets";
import { authors } from "@/data/authors";
import Pagetitle from "@/components/pagetitle.astro";
import Link from "@/components/ui/link.astro";
---

<Layout title="About">
  <Container>
    <Pagetitle>
      <Fragment slot="title">About</Fragment>
      <Fragment slot="desc"
        >Independent Counter-Strike analysis platform</Fragment
      >
    </Pagetitle>
    <div class="mt-6 text-center">
      <p
        class="inline-block rounded-full bg-yellow-100 px-3 py-1 text-sm font-medium text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300">
        Not affiliated with any organization, TO, or gambling site
      </p>
    </div>
    <div class="grid md:grid-cols-1 gap-10 mx-auto max-w-4xl mt-12">
      {
        authors.slice(0, 3).map((item) => (
          <div class="group">
            <div class="flex items-center justify-center w-40 h-40 mx-auto overflow-hidden rounded-full bg-gray-100 dark:bg-gray-800">
              <Image
                src={item.image}
                format="avif"
                width={580}
                height={580}
                alt={item.name}
                class="w-[150px] h-[150px]"
              />
            </div>

            <div class="mt-4 text-center">
              <a href="https://nickstambaugh.dev/" class="text-sm text-gray-500 dark:text-gray-300 underline">
                {item.name}
              </a>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mx-auto mt-6 max-w-lg text-center space-y-5">
      <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
        <a
          href="https://counterstrike.blog/"
          class="font-medium underline">counterstrike.blog</a
        > is an independent platform focused on high-signal analysis of the pro
        scene, meta, and gameplay trends.
      </p>

      <p class="text-base leading-relaxed text-gray-600 dark:text-gray-400">
        We work with partners who value informed audiences, long-form analysis,
        and content built for competitive Counter-Strike fans.
      </p>

      <div class="pt-6">
        <Link href="/contact" style="primary">
          Partnerships &amp; Media Inquiries
        </Link>
      </div>
    </div>
  </Container>
</Layout>
