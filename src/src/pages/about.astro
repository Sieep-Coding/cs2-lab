---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import { Image } from "astro:assets";
import { authors } from "@/data/authors";
import Pagetitle from "@/components/pagetitle.astro";
import Link from "@/components/ui/link.astro";
---

<Layout title="About">
  <Container>
    <Pagetitle>
      <Fragment slot="title">About</Fragment>
      <Fragment slot="desc"
        ></Fragment
      >
    </Pagetitle>
    <div class="mt-6 text-center">
      <p
        class="inline-block rounded-full bg-yellow-100 px-3 py-1 text-sm font-medium text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300">
        Not affiliated with Valve, any organization, TO, or gambling site
      </p>
    </div>

    <div class="mx-auto mt-6 max-w-lg text-center space-y-5">
      <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
        <a
          href="https://counterstrike.blog/"
          class="font-medium underline">counterstrike.blog</a
        > is an independent platform focused on high-signal analysis of the pro
        scene, meta, and gameplay trends.
      </p>

      <p class="text-base leading-relaxed text-gray-600 dark:text-gray-400">
        We work with media partners and community organizations who value informed audiences, long-form analysis,
        and content built for competitive Counter-Strike fans.
      </p>

      <div class="pt-6">
        <Link href="/contact" style="primary">
          Partnerships &amp; Media Inquiries
        </Link>
      </div>
    </div>
  </Container>
</Layout>
