  },
  {
    name: "Email",
    href: `mailto:?subject=${encodedTitle}&body=Check this out: ${encodedURL}`,
    color: "hover:text-gray-600",
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
  },
  {
    name: "Copy Link",
    href: "javascript:void(0);",
    color: "hover:text-blue-500",
    isCopy: true,
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>`,
  },
];
---

<Layout title={post.data.title} desc={post.data.excerpt} ogimage={ogImageSrc}>
  <Container>
    <div class="max-w-screen-md mx-auto">
      <div class="text-center">
        {category && <Label theme={category.color}>{category.title}</Label>}
      </div>

      <h1
        class="mt-2 mb-3 text-3xl font-semibold tracking-tight text-center lg:leading-snug text-brand-primary lg:text-4xl dark:text-white">
        {post.data.title}
      </h1>

      <div class="flex justify-center mt-3 space-x-3 text-gray-500">
        <div class="flex items-center gap-3">
          <div class="relative flex-shrink-0">
            {
              author?.image && (
                <Image
                  src={author.image}
                  alt="Author Photo"
                  width={80}
                  height={80}
                  loading="eager"
                  class="rounded-full object-cover w-10 h-10"
                />
              )
            }
          </div>
          <div>
            <p class="text-gray-800 dark:text-gray-400 font-medium">
              {author?.name || "Nick Stambaugh"}
            </p>
            <div class="flex items-center space-x-2 text-sm">
              <time
                class="text-gray-500 dark:text-gray-400"
                datetime={post.data.publishDate.toISOString()}>
                {getFormattedDate(post.data.publishDate)}
              </time>
            </div>
          </div>
        </div>
      </div>

      <div
        class="flex items-center justify-center gap-4 mt-4 pb-6 border-b border-gray-100 dark:border-gray-800">
        <span class="text-xs font-bold text-gray-400 uppercase tracking-widest"
          >Share</span
        >
        <div class="flex gap-4">
          {
            shareLinks.map((link) =>
              link.isCopy ? (
                <button
                  id="copy-link-button"
                  class={`text-gray-400 transition-colors duration-300 ${link.color} outline-none`}
                  aria-label="Copy Link"
                  set:html={link.icon}
                />
              ) : (
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`text-gray-400 transition-colors duration-300 ${link.color}`}
                  aria-label={`Share on ${link.name}`}
                  set:html={link.icon}
                />
              ),
            )
          }
        </div>
      </div>
    </div>
  </Container>

  <div
    class="relative z-0 max-w-screen-lg mx-auto overflow-hidden lg:rounded-lg aspect-video mt-4 bg-gray-900">
    {
      post.data.videoId ? (
        /* YouTube Embed */
        <iframe
          class="w-full h-full"
          src={`https://www.youtube-nocookie.com/embed/${post.data.videoId}`}
          title={post.data.title}
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        />
      ) : post.data.image ? (
        /* Fallback to Static Image */
        <Picture
          src={post.data.image}
          widths={[200, 400, 800]}
          sizes="(max-width: 640px) 90vw, 480px"
          width={1024}
          height={576}
          alt="Thumbnail"
          loading="eager"
          class="w-full h-full object-cover"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center bg-brand-primary/10">
          <span class="text-gray-400">Preview Unavailable</span>
        </div>
      )
    }
  </div>

  <Container>
    <article class="max-w-screen-md mx-auto">
      <div
        class="mx-auto my-3 prose prose-base dark:prose-invert prose-a:text-blue-600">
        <Content />
        <div
          class="flex flex-wrap items-center w-full gap-3 md:w-auto mt-6 pt-6 border-t border-gray-100 dark:border-gray-800">
          {
            post.data.tags?.map((tag) => (
              <span class="text-sm text-gray-400 bg-gray-50 dark:bg-gray-900 px-2 py-1 rounded">
                #{tag}
              </span>
            ))
          }
        </div>
      </div>

      <div
        class="flex flex-col sm:flex-row justify-center items-center gap-4 mt-12 mb-12">
        {
          prevPost ? (
            <a
              href={`/blog/${prevPost.slug}`}
              class="w-full sm:w-auto px-5 py-3 text-sm text-blue-600 transition rounded-md dark:bg-gray-800 dark:text-white bg-blue-50 hover:bg-blue-100 text-center">
              ‚Üê Previous
            </a>
          ) : (
            <div class="hidden sm:block w-32" />
          )
        }

        <a
          href="/"
          class="w-full sm:w-auto px-5 py-3 text-sm text-blue-600 transition rounded-md dark:bg-gray-800 dark:text-white bg-blue-50 hover:bg-blue-100 text-center font-medium">
          üè† Home
        </a>

        {
          nextPost ? (
            <a
              href={`/blog/${nextPost.slug}`}
              class="w-full sm:w-auto px-5 py-3 text-sm text-blue-600 transition rounded-md dark:bg-gray-800 dark:text-white bg-blue-50 hover:bg-blue-100 text-center">
              Next ‚Üí
            </a>
          ) : (
            <div class="hidden sm:block w-32" />
          )
        }
      </div>

      {author && <Authorcard author={author as Author} />}
    </article>
  </Container>
</Layout>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const copyBtn = document.getElementById("copy-link-button");
    if (copyBtn) {
      copyBtn.addEventListener("click", () => {
        navigator.clipboard.writeText(window.location.href).then(() => {
          const originalContent = copyBtn.innerHTML;
          copyBtn.style.color = "#3b82f6";
          setTimeout(() => {
            copyBtn.style.color = "";
          }, 2000);
          alert("Link copied to clipboard!");
        });
      });
    }
  });
</script>
